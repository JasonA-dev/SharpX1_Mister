;
;----------------------------------------------------------------------------
;customize switches
;----------------------------------------------------------------------------
;
MAX_TASK equ	2
;
;----------------------------------------------------------------------------
;TCB struct
;----------------------------------------------------------------------------
OS_TCB_SP	equ	0 ; current stack pointer
OS_TCB_TMR	equ	2 ; sleep time , bit15 = suspend flag
OS_TCB_SIZE	equ	4 ; size of TCB
;
;----------------------------------------------------------------------------
;TASK STATUS
;----------------------------------------------------------------------------
OS_NEVER equ 0ffffh
OS_RUN	 equ 00000h

;----------------------------------------------------------------------------
;OFFSET of register's in stack
;----------------------------------------------------------------------------
TCB_SP_PC	equ 0
TCB_SP_FLAG	equ 2
TCB_SP_R0	equ 4
TCB_SP_R1	equ 6
TCB_SP_R2	equ 8
TCB_SP_R3	equ 10
TCB_SP_R4	equ 12
TCB_SP_R5	equ 14
TCB_SP_R6	equ 16
TCB_SP_R7	equ 18
;
